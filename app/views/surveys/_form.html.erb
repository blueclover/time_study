<%= simple_form_for @survey, html: { class: 'form-horizontal'} do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Survey</legend>

    <%= f.input :name %>
    <%= f.input :description %>

    <div class="form-actions">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to 'Cancel', surveys_path, class: 'btn' %>
    </div>
  </fieldset>
<% end %>