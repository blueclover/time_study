<% title(@survey.name, "Surveys") %>

<h2><%= @survey.name %></h2>

<%= link_to "Edit Survey", edit_survey_path(@survey) %>
<%= link_to "Delete Survey", survey_path(@survey),
            method: :delete, confirm: "Are you sure?" %>
<%= link_to "New Activity Log", new_survey_activity_log_path(@survey) %>
<ul id='activity logs'>
	<% @survey.activity_logs.each do |log| %>
		<li>
			<%= log.user.email %> -
			<%= link_to log.start_date, [@survey, log] %>
		</li>
	<% end %>
</ul>